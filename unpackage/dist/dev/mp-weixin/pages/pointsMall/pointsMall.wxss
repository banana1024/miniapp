.fixedtips {
  width: 50%;
  border-radius: 20rpx;
  color: white;
  font-size: 24rpx;
  position: fixed;
  left: 32rpx;
  background: rgba(16, 16, 16, 0.5);
  padding-left: 10rpx;
  line-height: 40rpx;
}
.fixedtips ._img {
    vertical-align: middle;
    padding-right: 8rpx;
    border-radius: 50%;
}
.box {
  width: 95%;
  margin: 0rpx auto;
  padding-top: 50rpx;
}
.box ._img {
    vertical-align: middle;
    width: 100%;
    padding: 0rpx 0rpx;
    border-radius: 50%;
}
