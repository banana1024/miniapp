.uni-product-list {
  display: -webkit-box;
  display: -webkit-flex;
  display: -ms-flexbox;
  display: flex;
  width: 93%;
  margin: 0 auto;
  -webkit-flex-wrap: wrap;
      -ms-flex-wrap: wrap;
          flex-wrap: wrap;
  -webkit-box-orient: horizontal;
  -webkit-box-direction: normal;
  -webkit-flex-direction: row;
      -ms-flex-direction: row;
          flex-direction: row;
}
.uni-product {
  /* padding: 20upx; */
  display: -webkit-box;
  display: -webkit-flex;
  display: -ms-flexbox;
  display: flex;
  -webkit-box-orient: vertical;
  -webkit-box-direction: normal;
  -webkit-flex-direction: column;
      -ms-flex-direction: column;
          flex-direction: column;
  border: 1rpx solid #DCDFE6;
  border-radius: 8rpx;
  margin: 8rpx;
  padding: 10rpx;
  width: 44%;
}
.image-view {
  width: 100%;
  margin: 3rpx 0;
  position: relative;
}
.image-view .soldout {
    position: absolute;
    left: 0;
    top: 0;
    background: rgba(16, 16, 16, 0.5);
    color: white;
    width: 100%;
    height: 300rpx;
    line-height: 300rpx;
    text-align: center;
}
.image-view .soldout view {
      border: 1rpx solid white;
      border-radius: 100%;
      width: 150rpx;
      height: 150rpx;
      line-height: 150rpx;
      text-align: center;
      position: absolute;
      left: 26%;
      top: 22%;
}
.uni-product-image {
  width: 100%;
}
.uni-product-title {
  width: 100%;
  height: 35rpx;
  word-break: break-all;
  display: -webkit-box;
  overflow: hidden;
  line-height: 1.5;
  -o-text-overflow: ellipsis;
     text-overflow: ellipsis;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  font-size: 22rpx;
}
.uni-product-price {
  margin-top: 10rpx;
  font-size: 28rpx;
  line-height: 1.5;
  position: relative;
}
.uni-product-price-original {
  font-size: 24rpx;
  color: #FF3B1E;
  font-family: PingFangSC-Medium;
}
.uni-product-price-favour {
  color: #888888;
  text-decoration: line-through;
  margin-left: 10rpx;
}
.uni-product-tip {
  position: absolute;
  right: 10rpx;
  color: #606266;
  padding: 0 10rpx;
  font-size: 20rpx;
  top: 6rpx;
}

